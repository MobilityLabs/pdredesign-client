body, html
  background-color: $background-color-body
  font-family: $font-family
  color: $font-color
  font-size: 14px
  height: 100%

h1, h2, h3, h4, h5, h6
  font-weight: bold !important
  font-family: $heading-font-family

.row.secondary
  background-color: $secondary-color
  margin-top: 0
  color: $secondary-font-color
.row
  margin-right: 0 !important
  margin-left: 0 !important
  h1
    font-weight: bold
.row-header
  padding-bottom: 2em

body
  bottom: 0
  .container
    height: 100%
  .main-content
    background-color: $background-color
    border-radius: 0
    margin-bottom: 5em
    padding: 0
    .photo-bg
      background: url(<%= asset_path 'home-photobg.png' %>)
      background-size: cover
      width: 100%
      height: 400px
      color: white
  .main-container
    padding-top: 2em

.normal-cursor-hover
  cursor: pointer

.modal-header
  button.close
    font-size: 2em !important

.flush
  padding-left: 0 !important
  padding-right: 0 !important
