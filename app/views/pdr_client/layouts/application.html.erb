<!DOCTYPE html>
<html ng-app="PDRClient">
  <head>
    <title>PDredesign</title>
    <%= stylesheet_link_tag    "pdr_client", media: "all" %>
    <%= javascript_include_tag "pdr_client" %>
    <%= favicon_link_tag "favicon.png" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'pdr_client/layouts/partials/top_nav' %>

    <div class="home-container container-fluid" ng-show="showFluid">
      <div class="row">
        <div class="col-md-12 view" ui-view="full-width">
        </div>
      </div>
    </div>

    <div class="main-container container" ng-hide="showFluid">
      <div class="row">
        <div class="col-md-12 main-content" ui-view="full-width" ng-show="showFullWidth">
        </div>
      </div>
      <div id="hide-hidden-offcanvas">
        <div class="row row-offcanvas row-offcanvas-right">
          <div class="col-md-9 col-xs-12 col-sm-12 main-content" ng-hide="showFullWidth">
            <p class="pull-right visible-xs visible-sm">
              <button type="button" class="btn btn-primary" ng-click="toggleOffCanvas()">Toggle nav</button>
            </p>
            <%= yield %>
          </div>
          <div class="col-md-3 col-xs-12 col-sm-6 pull-right sidebar-offcanvas">
            <%= render 'pdr_client/layouts/partials/sidebar' %>
          </div>
        </div>
      </div>
    </div>

    <%= render 'pdr_client/layouts/partials/footer' %>
    <%= render 'pdr_client/layouts/partials/loading' %>
    <%= render 'pdr_client/layouts/partials/ga' %>
  </body>
</html>
